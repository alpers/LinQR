{
	"name": "LinQR",
	"version": "1.0",
	"description": "Generates QRCode of the current URL for viewing on mobile devices",
  "manifest_version": 2,
	"browser_action": {
		"default_icon": "icon-24.png",
		"default_popup": "qrcode.html",
		"default_title": "LinQR"
	},
	"background": {
	  "scripts": [
		"background.js"
	  ],
	  "persistent": false
	},
	"permissions": [
		"activeTab",
		"http://www.w3.org/1999/xlink", 
		"http://www.w3.org/2000/svg", 
		"http://www.w3.org/2000/xmlns/"
	],
	"icons": {
	  "16": "icon-16.png",
	  "24": "icon-24.png",
	  "128": "icon-128.png",
	  "512": "icon-512.png"
	}
}